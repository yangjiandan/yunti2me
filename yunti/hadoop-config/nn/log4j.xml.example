<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" threshold="all">
  <!-- console appender -->
  <!-- Add "console" to rootlogger if you want to use this -->
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="target" value="System.err"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yy/MM/dd HH:mm:ss} %p %c{2}: %m%n"/>
    </layout>
  </appender>

  <!-- EventCounter appender -->
  <!-- Sends counts of logging messages at different severity levels to Hadoop Metrics. -->
  <appender name="EventCounter" class="org.apache.hadoop.metrics.jvm.EventCounter">
  </appender>

  <!-- Daily Rolling File Appender -->
  <appender name="DRFA" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="${hadoop.log.dir}/${hadoop.log.file}"/>
    <!-- Rollver at midnight -->
    <param name="DatePattern" value=".yyyy-MM-dd"/>
    <!-- 30-day backup -->
    <!-- param name="MaxBackupIndex" value="30"/ -->
    <layout class="org.apache.log4j.PatternLayout">
      <!-- Pattern format: Date LogLevel LoggerName LogMessage -->
      <param name="ConversionPattern" value="%d{ISO8601} %p %c: %m%n"/>
      <!-- Debugging Pattern format -->
      <!--param name="ConversationPattern" value="%d{ISO8601} %-5p %c{2} (%F:%M(%L)) - %m%n"/-->
    </layout>
  </appender>

  <!-- TaskLog appender -->
  <appender name="TLA" class="org.apache.hadoop.mapred.TaskLogAppender">
    <param name="taskId" value="${hadoop.tasklog.taskid}"/>
    <param name="totalLogFileSize" value="${hadoop.tasklog.totalLogFileSize}"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %p %c: %m%n"/>
    </layout>
  </appender>

  <!-- Rolling File Appender -->
  <appender name="RFA" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="${hadoop.log.dir}/${hadoop.log.file}"/>
    <param name="MaxFileSize" value="200MB"/>
    <param name="MaxBackupIndex" value="30"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %p %c: %m%n"/>
    </layout>
  </appender>
   
  <!-- FSNamesystem Audit logging -->
  <!-- All audit events are logged at INFO level -->
  <logger name="org.apache.hadoop.fs.FSNamesystem.audit">
    <level value="warn"/>
  </logger>

  <!-- JobHistory logging  -->
  <!-- All history events are logged at INFO level -->
  <logger name="org.apache.hadoop.mapred.JobHistory.stream">
    <level value="warn"/>
  </logger>

  <!-- Jets3t library -->
  <logger name="org.jets3t.service.impl.rest.httpclient.RestS3Service">
    <level value="error"/>
  </logger>


  <!-- Custom Logging levels -->
  <!--
  <logger name="org.apache.hadoop.mapred.JobTracker">
    <level value="DEBUG"/>
  </logger>
  <logger name="org.apache.hadoop.mapred.TaskTracker">
    <level value="DEBUG"/>
  </logger>
  <logger name="org.apache.hadoop.fs.FSNamesystem">
    <level value="DEBUG"/>
  </logger>
  -->

  <!-- root logging configuration -->
  <root>
    <level value="${hadoop.root.logger.level}"/>
    <appender-ref ref="${hadoop.root.logger.appender}"/>
    <appender-ref ref="EventCounter"/>
  </root>

</log4j:configuration>
